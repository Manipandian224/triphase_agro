
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read sensor data.
    // This is secure because your app uses anonymous authentication by default.
    match /sensors/{sensorId} {
      allow read: if request.auth != null;
      allow write: if false; // Protect against unauthorized writes for now

      match /history/{readingId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
